{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "h",
                "hpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/home/w/.ccls-cache"
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        }
    },
    "clangd.disableDiagnostics": true
}
